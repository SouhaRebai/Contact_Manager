<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_style">
        <item name="android:layout_width">392dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#454141</item>
        <item name="android:textColor">#13B9DC</item>
        <item name="android:textSize">35dp</item>
    </style>

    <style name="text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:fontFamily">@font/basic</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textColor">#7A7E80</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="sub_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:fontFamily">@font/basic</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#AEF44336</item>
        <item name="android:textColorHighlight">#000000</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#DDE6EF</item>
        <item name="android:backgroundTint">#DDE6EF</item>
        <item name="android:foreground">@android:drawable/divider_horizontal_dark</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">25dp</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">87dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/basic</item>
        <item name="android:padding">10dp</item>
        <item name="android:shadowColor">#9E9E9E</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="edit_text_style" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/basic</item>
        <item name="android:gravity">bottom</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>